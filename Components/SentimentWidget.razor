<div class="card">
    <div class="card-header">
        <h5 class="card-title">Sentiment Analysis</h5>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <label for="sentimentSymbolInput" class="form-label">Symbol</label>
            <input type="text" class="form-control" id="sentimentSymbolInput" @bind="symbol" @bind:event="oninput" />
        </div>
        <button class="btn btn-primary" @onclick="LoadSentiment">Analyze Sentiment</button>
        
        @if (sentimentData != null)
        {
            <div class="mt-3">
                <h6>@symbol Sentiment Analysis</h6>
                <pre>@sentimentData</pre>
            </div>
        }
        else if (isLoading)
        {
            <div class="mt-3">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private string symbol = "AAPL";
    private string? sentimentData;
    private bool isLoading = false;

    private async Task LoadSentiment()
    {
        isLoading = true;
        sentimentData = null;
        
        try
        {
            var response = await Http.GetAsync($"api/sentiment-analysis/{symbol}");
            if (response.IsSuccessStatusCode)
            {
                sentimentData = await response.Content.ReadAsStringAsync();
            }
        }
        catch (Exception ex)
        {
            sentimentData = $"Error: {ex.Message}";
        }
        
        isLoading = false;
    }

    [Inject]
    private HttpClient Http { get; set; } = default!;
}
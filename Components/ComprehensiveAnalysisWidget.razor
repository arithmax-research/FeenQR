<div class="card">
    <div class="card-header">
        <h5 class="card-title">Comprehensive Analysis</h5>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <label for="compSymbolInput" class="form-label">Symbol</label>
            <input type="text" class="form-control" id="compSymbolInput" @bind="symbol" @bind:event="oninput" />
        </div>
        <div class="mb-3">
            <label for="assetTypeSelect" class="form-label">Asset Type</label>
            <select class="form-select" id="assetTypeSelect" @bind="assetType">
                <option value="stock">Stock</option>
                <option value="crypto">Crypto</option>
                <option value="forex">Forex</option>
            </select>
        </div>
        <button class="btn btn-primary" @onclick="LoadComprehensiveAnalysis">Analyze</button>
        
        @if (analysisData != null)
        {
            <div class="mt-3">
                <h6>@symbol Comprehensive Analysis</h6>
                <pre>@analysisData</pre>
            </div>
        }
        else if (isLoading)
        {
            <div class="mt-3">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private string symbol = "AAPL";
    private string assetType = "stock";
    private string? analysisData;
    private bool isLoading = false;

    private async Task LoadComprehensiveAnalysis()
    {
        isLoading = true;
        analysisData = null;
        
        try
        {
            var response = await Http.GetAsync($"api/comprehensive-analysis/{symbol}?assetType={assetType}");
            if (response.IsSuccessStatusCode)
            {
                analysisData = await response.Content.ReadAsStringAsync();
            }
        }
        catch (Exception ex)
        {
            analysisData = $"Error: {ex.Message}";
        }
        
        isLoading = false;
    }

    [Inject]
    private HttpClient Http { get; set; } = default!;
}
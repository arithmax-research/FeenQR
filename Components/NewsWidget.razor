<div class="card">
    <div class="card-header">
        <h5 class="card-title">Latest News</h5>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <label for="newsSymbolInput" class="form-label">Symbol</label>
            <input type="text" class="form-control" id="newsSymbolInput" @bind="symbol" @bind:event="oninput" />
        </div>
        <button class="btn btn-primary" @onclick="LoadNews">Load News</button>
        
        @if (newsData != null)
        {
            <div class="mt-3">
                <h6>@symbol Latest News</h6>
                <pre>@newsData</pre>
            </div>
        }
        else if (isLoading)
        {
            <div class="mt-3">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private string symbol = "AAPL";
    private string? newsData;
    private bool isLoading = false;

    private async Task LoadNews()
    {
        isLoading = true;
        newsData = null;
        
        try
        {
            var response = await Http.GetAsync($"api/news/{symbol}");
            if (response.IsSuccessStatusCode)
            {
                newsData = await response.Content.ReadAsStringAsync();
            }
        }
        catch (Exception ex)
        {
            newsData = $"Error: {ex.Message}";
        }
        
        isLoading = false;
    }

    [Inject]
    private HttpClient Http { get; set; } = default!;
}
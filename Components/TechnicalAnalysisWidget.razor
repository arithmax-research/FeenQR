<div class="card">
    <div class="card-header">
        <h5 class="card-title">Technical Analysis</h5>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <label for="techSymbolInput" class="form-label">Symbol</label>
            <input type="text" class="form-control" id="techSymbolInput" @bind="symbol" @bind:event="oninput" />
        </div>
        <button class="btn btn-primary" @onclick="LoadTechnicalAnalysis">Analyze</button>
        
        @if (analysisData != null)
        {
            <div class="mt-3">
                <h6>@symbol Technical Analysis</h6>
                <pre>@analysisData</pre>
            </div>
        }
        else if (isLoading)
        {
            <div class="mt-3">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private string symbol = "AAPL";
    private string? analysisData;
    private bool isLoading = false;

    private async Task LoadTechnicalAnalysis()
    {
        isLoading = true;
        analysisData = null;
        
        try
        {
            var response = await Http.GetAsync($"api/technical-analysis/{symbol}");
            if (response.IsSuccessStatusCode)
            {
                analysisData = await response.Content.ReadAsStringAsync();
            }
        }
        catch (Exception ex)
        {
            analysisData = $"Error: {ex.Message}";
        }
        
        isLoading = false;
    }

    [Inject]
    private HttpClient Http { get; set; } = default!;
}
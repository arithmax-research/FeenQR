<div class="card">
    <div class="card-header">
        <h5 class="card-title">Academic Research Papers</h5>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <label for="topicInput" class="form-label">Research Topic</label>
            <input type="text" class="form-control" id="topicInput" @bind="topic" @bind:event="oninput" placeholder="e.g., machine learning in finance" />
        </div>
        <div class="mb-3">
            <label for="maxPapersInput" class="form-label">Max Papers</label>
            <input type="number" class="form-control" id="maxPapersInput" @bind="maxPapers" min="1" max="10" />
        </div>
        <button class="btn btn-primary" @onclick="SearchPapers">Search Papers</button>
        
        @if (papersData != null)
        {
            <div class="mt-3">
                <h6>Research Papers on "@topic"</h6>
                <pre>@papersData</pre>
            </div>
        }
        else if (isLoading)
        {
            <div class="mt-3">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private string topic = "quantitative finance";
    private int maxPapers = 5;
    private string? papersData;
    private bool isLoading = false;

    private async Task SearchPapers()
    {
        isLoading = true;
        papersData = null;
        
        try
        {
            var requestData = new { Topic = topic, MaxPapers = maxPapers };
            var response = await Http.PostAsJsonAsync("api/research-papers", requestData);
            if (response.IsSuccessStatusCode)
            {
                papersData = await response.Content.ReadAsStringAsync();
            }
        }
        catch (Exception ex)
        {
            papersData = $"Error: {ex.Message}";
        }
        
        isLoading = false;
    }

    [Inject]
    private HttpClient Http { get; set; } = default!;
}
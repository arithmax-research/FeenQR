<div class="card">
    <div class="card-header">
        <h5 class="card-title">Risk Assessment</h5>
    </div>
    <div class="card-body">
        <button class="btn btn-primary" @onclick="LoadRiskAssessment">Assess Risk</button>
        
        @if (riskData != null)
        {
            <div class="mt-3">
                <h6>Portfolio Risk Assessment</h6>
                <pre>@riskData</pre>
            </div>
        }
        else if (isLoading)
        {
            <div class="mt-3">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private string? riskData;
    private bool isLoading = false;

    private async Task LoadRiskAssessment()
    {
        isLoading = true;
        riskData = null;
        
        try
        {
            var response = await Http.GetAsync("api/risk-assessment");
            if (response.IsSuccessStatusCode)
            {
                riskData = await response.Content.ReadAsStringAsync();
            }
        }
        catch (Exception ex)
        {
            riskData = $"Error: {ex.Message}";
        }
        
        isLoading = false;
    }

    [Inject]
    private HttpClient Http { get; set; } = default!;
}
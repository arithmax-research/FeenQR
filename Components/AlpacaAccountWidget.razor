<div class="card">
    <div class="card-header">
        <h5 class="card-title">Alpaca Account</h5>
    </div>
    <div class="card-body">
        <button class="btn btn-primary" @onclick="LoadAccountInfo">Load Account Info</button>
        
        @if (accountData != null)
        {
            <div class="mt-3">
                <h6>Account Information</h6>
                <pre>@accountData</pre>
            </div>
        }
        else if (isLoading)
        {
            <div class="mt-3">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
    </div>
</div>

<div class="card mt-3">
    <div class="card-header">
        <h5 class="card-title">Alpaca Positions</h5>
    </div>
    <div class="card-body">
        <button class="btn btn-primary" @onclick="LoadPositions">Load Positions</button>
        
        @if (positionsData != null)
        {
            <div class="mt-3">
                <h6>Current Positions</h6>
                <pre>@positionsData</pre>
            </div>
        }
        else if (isLoadingPositions)
        {
            <div class="mt-3">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private string? accountData;
    private string? positionsData;
    private bool isLoading = false;
    private bool isLoadingPositions = false;

    private async Task LoadAccountInfo()
    {
        isLoading = true;
        accountData = null;
        
        try
        {
            var response = await Http.GetAsync("api/alpaca/account");
            if (response.IsSuccessStatusCode)
            {
                accountData = await response.Content.ReadAsStringAsync();
            }
        }
        catch (Exception ex)
        {
            accountData = $"Error: {ex.Message}";
        }
        
        isLoading = false;
    }

    private async Task LoadPositions()
    {
        isLoadingPositions = true;
        positionsData = null;
        
        try
        {
            var response = await Http.GetAsync("api/alpaca/positions");
            if (response.IsSuccessStatusCode)
            {
                positionsData = await response.Content.ReadAsStringAsync();
            }
        }
        catch (Exception ex)
        {
            positionsData = $"Error: {ex.Message}";
        }
        
        isLoadingPositions = false;
    }

    [Inject]
    private HttpClient Http { get; set; } = default!;
}
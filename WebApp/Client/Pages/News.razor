@page "/news"
@inject HttpClient Http

<PageTitle>FeenQR - Market News</PageTitle>

<style>
    .news-container {
        padding: 2rem;
        min-height: 100vh;
    }

    .news-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 1.5rem;
    }

    .news-card {
        background: rgba(10, 15, 30, 0.7);
        backdrop-filter: blur(30px);
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 16px;
        padding: 1.5rem;
        transform-style: preserve-3d;
        transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
        cursor: pointer;
    }

    .news-card:hover {
        transform: translateY(-8px) translateZ(20px);
        border-color: rgba(59, 130, 246, 0.3);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
    }

    .news-title-section {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 2rem;
        color: #fff;
    }

    .news-headline {
        font-size: 1.05rem;
        font-weight: 600;
        color: #fff;
        margin-bottom: 0.75rem;
        line-height: 1.4;
    }

    .news-meta {
        display: flex;
        gap: 1rem;
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.5);
        margin-bottom: 0.75rem;
    }

    .news-summary {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.7);
        line-height: 1.6;
    }

    .filter-pills {
        display: flex;
        gap: 0.75rem;
        margin-bottom: 2rem;
        flex-wrap: wrap;
    }

    .filter-pill {
        padding: 0.6rem 1.2rem;
        border-radius: 12px;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.05);
        color: rgba(255, 255, 255, 0.6);
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 0.85rem;
        font-weight: 500;
    }

    .filter-pill:hover, .filter-pill.active {
        background: rgba(59, 130, 246, 0.15);
        border-color: rgba(59, 130, 246, 0.3);
        color: #fff;
    }
</style>

<div class="news-container">
    <div class="news-title-section">Latest Market News</div>

    <div class="filter-pills">
        <div class="filter-pill active">All</div>
        <div class="filter-pill">Stocks</div>
        <div class="filter-pill">Crypto</div>
        <div class="filter-pill">Economics</div>
        <div class="filter-pill">Earnings</div>
    </div>

    @if (isLoading)
    {
        <div style="text-align: center; padding: 4rem;">
            <div class="loading-spinner"></div>
        </div>
    }
    else
    {
        <div class="news-grid">
            @foreach (var article in newsArticles)
            {
                <div class="news-card" @onclick="() => OpenArticle(article.Url)">
                    <div class="news-headline">@article.Title</div>
                    <div class="news-meta">
                        <span>@article.Source</span>
                        <span>•</span>
                        <span>@article.PublishedAt</span>
                    </div>
                    <div class="news-summary">@article.Summary</div>
                </div>
            }
        </div>
    }
</div>

@code {
    private bool isLoading = true;
    private List<NewsArticle> newsArticles = new();

    public class NewsArticle
    {
        public string Title { get; set; } = "";
        public string Summary { get; set; } = "";
        public string Source { get; set; } = "";
        public string PublishedAt { get; set; } = "";
        public string Url { get; set; } = "";
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadNews();
    }

    private async Task LoadNews()
    {
        try
        {
            isLoading = true;
            var response = await Http.GetFromJsonAsync<NewsArticle[]>("api/news?limit=50");
            
            if (response != null && response.Length > 0)
            {
                newsArticles = response.ToList();
                Console.WriteLine($"✓ Loaded {newsArticles.Count} news articles from API");
            }
            else
            {
                Console.WriteLine("No news articles returned from API");
            }
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"News API Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void OpenArticle(string url)
    {
        if (url != "#")
        {
            // Open in new tab
            Console.WriteLine($"Opening: {url}");
        }
    }
}

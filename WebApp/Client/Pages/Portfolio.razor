        {
            Console.WriteLine("Calling portfolio analytics API");
            var response = await Http.PostAsJsonAsync("api/portfolio/analytics", new { portfolioId = "simulation", rollingWindow = 30 });
            // TODO: Display analytics results
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Analytics error: {ex.Message}");
        }
    }

    private async Task BuildStrategy()
    {
        try
        {
            Console.WriteLine("Calling strategy builder API");
            var response = await Http.PostAsJsonAsync("api/portfolio/strategy", new { portfolioId = "simulation" });
            // TODO: Display strategy builder form
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Strategy error: {ex.Message}");
        }
    }

    private async Task RunMonteCarlo()
    {
        try
        {
            Console.WriteLine("Calling Monte Carlo API");
            var response = await Http.PostAsJsonAsync("api/portfolio/monte-carlo", new { portfolioId = "simulation", simulations = 10000, days = 252 });
            // TODO: Display simulation results with probability charts
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Monte Carlo error: {ex.Message}");
        }
    }

    private async Task OptimizePortfolio()
    {
        try
        {
            Console.WriteLine("Calling portfolio optimization API");
            var response = await Http.PostAsJsonAsync("api/portfolio/optimize", new { portfolioId = "simulation", method = "max-sharpe" });

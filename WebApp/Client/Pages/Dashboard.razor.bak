@page "/dashboard"
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager Navigation

<PageTitle>FeenQR - Quant Dashboard</PageTitle>

<style>
    .dashboard-container {
        padding: 2rem;
        min-height: 100vh;
        perspective: 1500px;
    }

    .data-card {
        background: rgba(10, 15, 30, 0.7);
        backdrop-filter: blur(30px);
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 20px;
        padding: 1.5rem;
        transform-style: preserve-3d;
        transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);
    }

    .data-card:hover {
        transform: translateZ(30px) rotateX(2deg);
        border-color: rgba(59, 130, 246, 0.3);
        box-shadow: 0 30px 60px rgba(0, 0, 0, 0.5), 0 0 80px rgba(59, 130, 246, 0.1);
    }

    .ticker-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .ticker-item-3d {
        background: rgba(15, 20, 35, 0.8);
        border: 1px solid rgba(255, 255, 255, 0.04);
        border-radius: 16px;
        padding: 1.25rem 1rem;
        transform-style: preserve-3d;
        transition: all 0.4s ease;
        cursor: pointer;
    }

    .ticker-item-3d:hover {
        transform: translateY(-8px) translateZ(20px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
    }

    .symbol {
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.95rem;
        font-weight: 700;
        color: #fff;
        opacity: 0.9;
        margin-bottom: 0.5rem;
    }

    .price {
        font-family: 'JetBrains Mono', monospace;
        font-size: 1.3rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 0.3rem;
    }

    .change {
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.85rem;
        font-weight: 600;
        padding: 0.25rem 0.5rem;
        border-radius: 6px;
        display: inline-block;
    }

    .change.up {
        color: #10b981;
        background: rgba(16, 185, 129, 0.1);
    }

    .change.down {
        color: #ef4444;
        background: rgba(239, 68, 68, 0.1);
    }

    .chart-3d {
        background: rgba(10, 15, 30, 0.5);
        border-radius: 16px;
        padding: 1.5rem;
        transform-style: preserve-3d;
        transition: transform 0.5s ease;
    }

    .chart-3d:hover {
        transform: translateZ(15px);
    }

    .loading-spinner {
        display: inline-block;
        width: 40px;
        height: 40px;
        border: 4px solid rgba(59, 130, 246, 0.1);
        border-top-color: #3b82f6;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        to { transform: rotate(360deg); }
    }

    .page-title {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 2rem;
        color: #fff;
        opacity: 0.95;
    }

    .nav-pills {
        display: flex;
        gap: 0.75rem;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

    .nav-pill {
        padding: 0.6rem 1.2rem;
        border-radius: 12px;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.05);
        color: rgba(255, 255, 255, 0.6);
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .nav-pill:hover, .nav-pill.active {
        background: rgba(59, 130, 246, 0.15);
        border-color: rgba(59, 130, 246, 0.3);
        color: #fff;
    }
</style>

<div class="dashboard-container">
    <div class="page-title">Live Market Data</div>

    @if (isLoading)
    {
        <div style="display: flex; justify-content: center; align-items: center; height: 400px;">
            <div class="loading-spinner"></div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="data-card" style="text-align: center; padding: 3rem; color: #ef4444;">
            <div style="font-size: 3rem; margin-bottom: 1rem;">⚠️</div>
            <div>@errorMessage</div>
        </div>
    }
    else
    {
        <!-- Navigation Pills -->
        <div class="nav-pills">
            <div class="nav-pill active">Overview</div>
            <div class="nav-pill" @onclick='() => Navigation.NavigateTo("/charts")'>Charts</div>
            <div class="nav-pill" @onclick='() => Navigation.NavigateTo("/news")'>News</div>
            <div class="nav-pill" @onclick='() => Navigation.NavigateTo("/ai-chat")'>AI Chat</div>
            <div class="nav-pill" @onclick='() => Navigation.NavigateTo("/analytics")'>Analytics</div>
        </div>

        <!-- Real-time Market Quotes -->
        <div class="ticker-grid">
            @foreach (var quote in quotes)
            {
                <div class="ticker-item-3d" @onclick="() => ShowDetails(quote.Symbol)">
                    <div class="symbol">@quote.Symbol</div>
                    <div class="price">$@quote.Price.ToString("F2")</div>
                    <div class="change @(quote.Change >= 0 ? "up" : "down")">
                        @(quote.Change >= 0 ? "▲" : "▼") @Math.Abs(quote.Change).ToString("F2")%
                    </div>
                    @if (quote.Volume > 0)
                    {
                        <div style="font-size: 0.7rem; color: rgba(255,255,255,0.4); margin-top: 0.5rem;">
                            Vol: @FormatVolume(quote.Volume)
                        </div>
                    }
                </div>
            }
        </div>

        <!-- Chart Section -->
        <div class="data-card" style="margin-bottom: 2rem;">
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
                <div style="font-size: 1.1rem; font-weight: 600; color: #fff;">Market Overview</div>
                <div style="display: flex; gap: 0.5rem;">
                    <button class="nav-pill" style="padding: 0.4rem 0.8rem; font-size: 0.8rem;">1D</button>
                    <button class="nav-pill" style="padding: 0.4rem 0.8rem; font-size: 0.8rem;">1W</button>
                    <button class="nav-pill active" style="padding: 0.4rem 0.8rem; font-size: 0.8rem;">1M</button>
                    <button class="nav-pill" style="padding: 0.4rem 0.8rem; font-size: 0.8rem;">1Y</button>
                </div>
            </div>
            <div class="chart-3d">
                <div id="mainChart" style="width: 100%; height: 500px;"></div>
            </div>
        </div>
    }
</div>

@code {
    private bool isLoading = true;
    private string? errorMessage = null;
    private List<Quote> quotes = new();

    public class Quote
    {
        public string Symbol { get; set; } = "";
        public double Price { get; set; }
        public double Change { get; set; }
        public long Volume { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadMarketData();
    }

    private async Task LoadMarketData()
    {
        try
        {
            isLoading = true;
            errorMessage = null;

            var response = await Http.GetFromJsonAsync<Quote[]>("api/marketdata/quotes");
            
            if (response != null && response.Length > 0)
            {
                quotes = response.ToList();
                Console.WriteLine($"✓ Loaded {quotes.Count} real quotes from Alpaca API");
            }
            else
            {
                errorMessage = "No market data available";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load data: {ex.Message}";
            Console.Error.WriteLine($"API Error: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && quotes.Any())
        {
            try
            {
                var topSymbol = quotes.First().Symbol;
                await JS.InvokeVoidAsync("createTradingViewChart", "mainChart", $"NASDAQ:{topSymbol}", "D", 500);
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Chart initialization error: {ex.Message}");
            }
        }
    }

    private void ShowDetails(string symbol)
    {
        Navigation.NavigateTo($"/symbol/{symbol}");
    }

    private string FormatVolume(long volume)
    {
        if (volume >= 1_000_000_000)
            return $"{volume / 1_000_000_000.0:F1}B";
        if (volume >= 1_000_000)
            return $"{volume / 1_000_000.0:F1}M";
        if (volume >= 1_000)
            return $"{volume / 1_000.0:F1}K";
        return volume.ToString();
    }
}

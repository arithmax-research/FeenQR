@page "/statistical-analysis"
@using System.Net.Http.Json
@inject HttpClient Http
@inject IJSRuntime JS

<PageTitle>Statistical Analysis - FeenQR</PageTitle>

<style>
    .stats-container {
        position: fixed;
        left: 280px;
        top: 0;
        right: 0;
        bottom: 0;
        background: inherit;
        overflow-x: hidden;
        overflow-y: auto;
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
    }

    .stats-header {
        background: rgba(18, 18, 18, 0.95);
        border-bottom: 1px solid rgba(255, 255, 255, 0.08);
        padding: 1rem 1.5rem;
        position: sticky;
        top: 0;
        z-index: 100;
        flex-shrink: 0;
    }

    .stats-content {
        flex: 1;
        overflow-y: auto;
        padding: 1.5rem;
    }

    .input-panel {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .input-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }

    .input-group-custom {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .input-label {
        color: #d1d5db;
        font-size: 0.875rem;
        font-weight: 600;
    }

    .input-field {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        padding: 0.625rem;
        color: #f9fafb;
        font-size: 0.875rem;
    }

    .input-field:focus {
        outline: none;
        border-color: rgba(255, 255, 255, 0.3);
        background: rgba(255, 255, 255, 0.08);
    }

    .execute-btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 8px;
        padding: 0.625rem 1.5rem;
        color: white;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .execute-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }

    .execute-btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
        transform: none;
    }

    .result-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1rem;
    }

    .result-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 1rem;
        padding-bottom: 0.75rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .result-title {
        color: #f9fafb;
        font-size: 1.125rem;
        font-weight: 600;
        margin: 0;
    }

    .metric-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .metric-box {
        text-align: center;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.02);
        border-radius: 8px;
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .metric-value {
        font-size: 1.75rem;
        font-weight: 700;
        margin-bottom: 0.25rem;
    }

    .metric-value.primary { color: #667eea; }
    .metric-value.success { color: #10b981; }
    .metric-value.warning { color: #f59e0b; }
    .metric-value.danger { color: #ef4444; }

    .metric-label {
        color: #9ca3af;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .ai-insights-panel {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
        border: 1px solid rgba(102, 126, 234, 0.3);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .ai-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 1rem;
    }

    .ai-badge {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 0.25rem 0.75rem;
        border-radius: 6px;
        font-size: 0.7rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .chat-messages {
        max-height: 400px;
        overflow-y: auto;
        margin-bottom: 1rem;
        padding: 1rem;
        background: rgba(0, 0, 0, 0.2);
        border-radius: 8px;
    }

    .chat-message {
        margin-bottom: 1rem;
        padding: 0.75rem 1rem;
        border-radius: 8px;
        animation: slideIn 0.3s ease;
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .chat-message.user {
        background: rgba(59, 130, 246, 0.15);
        border-left: 3px solid #3b82f6;
        margin-left: 2rem;
    }

    .chat-message.ai {
        background: rgba(102, 126, 234, 0.15);
        border-left: 3px solid #667eea;
        margin-right: 2rem;
    }

    .chat-input-group {
        display: flex;
        gap: 0.5rem;
    }

    .chat-input {
        flex: 1;
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 8px;
        padding: 0.75rem 1rem;
        color: #f9fafb;
        font-size: 0.875rem;
    }

    .chat-input:focus {
        outline: none;
        border-color: rgba(102, 126, 234, 0.5);
    }

    .chat-btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 8px;
        padding: 0.75rem 1.25rem;
        color: white;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }

    .chat-btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }

    .chat-btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
        transform: none;
    }

    .action-btn-group {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .action-btn {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        padding: 0.5rem 1rem;
        color: #d1d5db;
        font-size: 0.875rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

    .action-btn:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.2);
    }

    .data-table {
        width: 100%;
        font-size: 0.875rem;
    }

    .data-table td {
        padding: 0.75rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        color: #9ca3af;
    }

    .data-table td:first-child {
        color: #f9fafb;
        font-weight: 600;
    }

    .data-table td:last-child {
        text-align: right;
        color: #f9fafb;
    }
</style>

<div class="stats-container">
    <div class="stats-header">
        <h3 class="mb-1 text-white">
            <i class="bi bi-graph-up-arrow"></i> Statistical Analysis
        </h3>
        <p class="text-muted small mb-0">Advanced statistical testing with AI-powered insights</p>
    </div>

    <div class="stats-content">
        <!-- Input Panel -->
        <div class="input-panel">
            <div class="input-grid">
                <div class="input-group-custom">
                    <label class="input-label">Symbol</label>
                    <input type="text" class="input-field" @bind="symbol" placeholder="AAPL" />
                </div>
                <div class="input-group-custom">
                    <label class="input-label">Analysis Type</label>
                    <select class="input-field" @bind="analysisType">
                        <option value="statistical-test">Statistical Test</option>
                        <option value="hypothesis-test">Hypothesis Test</option>
                        <option value="power-analysis">Power Analysis</option>
                        <option value="time-series-analysis">Time Series Analysis</option>
                        <option value="stationarity-test">Stationarity Test</option>
                        <option value="autocorrelation-analysis">Autocorrelation Analysis</option>
                    </select>
                </div>
                <div class="input-group-custom">
                    <label class="input-label">Days</label>
                    <input type="number" class="input-field" @bind="days" min="30" max="1800" />
                </div>
                <div class="input-group-custom">
                    <label class="input-label">Test Type</label>
                    <select class="input-field" @bind="testType">
                        <option value="t-test">T-Test</option>
                        <option value="z-test">Z-Test</option>
                        <option value="jarque-bera">Jarque-Bera</option>
                        <option value="shapiro-wilk">Shapiro-Wilk</option>
                    </select>
                </div>
                <div class="input-group-custom" style="justify-content: flex-end;">
                    <label class="input-label">&nbsp;</label>
                    <button class="execute-btn" @onclick="PerformAnalysis" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm"></span>
                        }
                        else
                        {
                            <i class="bi bi-play-circle-fill"></i>
                        }
                        Analyze
                    </button>
                </div>
            </div>
        </div>

        @if (isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;"></div>
                <p class="mt-3 text-white">Analyzing @symbol data...</p>
            </div>
        }

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>@errorMessage
            </div>
        }

        @if (result != null && !isLoading)
        {
            <!-- Summary Metrics -->
            <div class="metric-grid">
                <div class="metric-box">
                    <div class="metric-value primary">@symbol</div>
                    <div class="metric-label">Symbol</div>
                </div>
                <div class="metric-box">
                    <div class="metric-value primary">@days</div>
                    <div class="metric-label">Days</div>
                </div>
                @if (result.HasValue && result.Value.TryGetProperty("dataPoints", out var dataPoints))
                {
                    <div class="metric-box">
                        <div class="metric-value success">@dataPoints.GetInt32()</div>
                        <div class="metric-label">Data Points</div>
                    </div>
                }
                @if (result.HasValue && result.Value.TryGetProperty("result", out var resultData) && 
                     resultData.TryGetProperty("pValue", out var pValue))
                {
                    <div class="metric-box">
                        <div class="metric-value @(pValue.GetDouble() < 0.05 ? "danger" : "warning")">
                            @pValue.GetDouble().ToString("F4")
                        </div>
                        <div class="metric-label">P-Value @(pValue.GetDouble() < 0.05 ? "(Significant)" : "(Not Significant)")</div>
                    </div>
                }
            </div>

            <!-- AI Insights Panel -->
            <div class="ai-insights-panel">
                <div class="ai-header">
                    <i class="bi bi-stars" style="font-size: 1.5rem; color: #fbbf24;"></i>
                    <h5 class="result-title mb-0">AI Analytics</h5>
                    <span class="ai-badge">DeepSeek Powered</span>
                </div>

                <div class="chat-messages" id="chatMessages">
                    @if (chatMessages.Count == 0)
                    {
                        <div class="text-center text-muted py-3">
                            <i class="bi bi-chat-dots" style="font-size: 2rem;"></i>
                            <p class="mt-2 mb-0">Click "Auto Insights" to get AI analysis or ask your own questions</p>
                        </div>
                    }
                    @foreach (var message in chatMessages)
                    {
                        <div class="chat-message @(message.IsUser ? "user" : "ai")">
                            <div class="d-flex align-items-center mb-1">
                                <i class="bi @(message.IsUser ? "bi-person-circle" : "bi-robot") me-2"></i>
                                <small style="color: #9ca3af;">@(message.IsUser ? "You" : "AI Analyst")</small>
                            </div>
                            <div style="color: #f9fafb;">@message.Content</div>
                        </div>
                    }
                    @if (isAiThinking)
                    {
                        <div class="chat-message ai">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-robot me-2"></i>
                                <div class="spinner-border spinner-border-sm me-2"></div>
                                <small style="color: #9ca3af;">AI is analyzing...</small>
                            </div>
                        </div>
                    }
                </div>

                <div class="chat-input-group">
                    <input type="text" 
                           class="chat-input" 
                           @bind="chatInput" 
                           @bind:event="oninput"
                           @onkeyup="HandleChatKeyPress"
                           placeholder="Ask AI about these results..." 
                           disabled="@isAiThinking" />
                    <button class="chat-btn" @onclick="SendChatMessage" disabled="@(isAiThinking || string.IsNullOrWhiteSpace(chatInput))">
                        <i class="bi bi-send-fill"></i>
                    </button>
                    @if (chatMessages.Count == 0)
                    {
                        <button class="chat-btn" @onclick="GetAutoInsights" disabled="@isAiThinking">
                            <i class="bi bi-lightbulb-fill me-1"></i> Auto Insights
                        </button>
                    }
                </div>
            </div>

            <div class="row">
                <!-- Detailed Results -->
                <div class="col-lg-8">
                    @if (result.HasValue && result.Value.TryGetProperty("result", out var detailsResult))
                    {
                        <div class="result-card">
                            <div class="result-header">
                                <i class="bi bi-clipboard-data" style="font-size: 1.5rem; color: #667eea;"></i>
                                <h5 class="result-title">Statistical Results</h5>
                            </div>
                            <table class="data-table">
                                <tbody>
                                    @foreach (var prop in detailsResult.EnumerateObject())
                                    {
                                        @if (prop.Value.ValueKind == System.Text.Json.JsonValueKind.Number)
                                        {
                                            <tr>
                                                <td>@FormatPropertyName(prop.Name)</td>
                                                <td>@FormatValue(prop.Value)</td>
                                            </tr>
                                        }
                                        else if (prop.Value.ValueKind == System.Text.Json.JsonValueKind.String)
                                        {
                                            <tr>
                                                <td>@FormatPropertyName(prop.Name)</td>
                                                <td>@prop.Value.GetString()</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    <div class="result-card">
                        <div class="result-header">
                            <i class="bi bi-code-square" style="font-size: 1.5rem; color: #667eea;"></i>
                            <h5 class="result-title">Raw JSON</h5>
                        </div>
                        <pre style="background: rgba(0,0,0,0.3); padding: 1rem; border-radius: 8px; color: #9ca3af; font-size: 0.8rem; max-height: 300px; overflow-y: auto;">@resultJson</pre>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="col-lg-4">
                    <div class="result-card">
                        <div class="result-header">
                            <i class="bi bi-info-circle" style="font-size: 1.5rem; color: #667eea;"></i>
                            <h5 class="result-title">Analysis Info</h5>
                        </div>
                        <table class="data-table">
                            <tbody>
                                <tr>
                                    <td>Type</td>
                                    <td>@GetAnalysisName(analysisType)</td>
                                </tr>
                                <tr>
                                    <td>Test</td>
                                    <td>@testType.ToUpper()</td>
                                </tr>
                                <tr>
                                    <td>Symbol</td>
                                    <td>@symbol</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="result-card">
                        <div class="result-header">
                            <i class="bi bi-lightning-charge" style="font-size: 1.5rem; color: #667eea;"></i>
                            <h5 class="result-title">Actions</h5>
                        </div>
                        <div class="action-btn-group">
                            <button class="action-btn w-100" @onclick="ExportResults">
                                <i class="bi bi-download me-1"></i> Export JSON
                            </button>
                            <button class="action-btn w-100" @onclick="CopyToClipboard">
                                <i class="bi bi-clipboard me-1"></i> Copy Results
                            </button>
                            <button class="action-btn w-100" @onclick="ExportChat">
                                <i class="bi bi-chat-square-text me-1"></i> Export Chat
                            </button>
                            <button class="action-btn w-100" @onclick="ResetAnalysis">
                                <i class="bi bi-arrow-clockwise me-1"></i> New Analysis
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private string symbol = "AAPL";
    private string analysisType = "statistical-test";
    private int days = 252;
    private string testType = "t-test";
    private bool isLoading = false;
    private string errorMessage = string.Empty;
    private JsonElement? result = null;
    private string resultJson = "";

    // AI Chat
    private string chatInput = "";
    private bool isAiThinking = false;
    private List<ChatMessage> chatMessages = new();

    private class ChatMessage
    {
        public string Content { get; set; } = "";
        public bool IsUser { get; set; }
        public DateTime Timestamp { get; set; } = DateTime.Now;
    }

    private async Task PerformAnalysis()
    {
        if (string.IsNullOrWhiteSpace(symbol))
        {
            errorMessage = "Please enter a symbol";
            return;
        }

        isLoading = true;
        errorMessage = string.Empty;
        result = null;
        resultJson = "";
        chatMessages.Clear();

        try
        {
            var url = analysisType switch
            {
                "statistical-test" => $"/api/StatisticalAnalysis/statistical-test?symbol={symbol}&testType={testType}&days={days}",
                "hypothesis-test" => $"/api/StatisticalAnalysis/hypothesis-test?symbol={symbol}&days={days}",
                "power-analysis" => $"/api/StatisticalAnalysis/power-analysis?symbol={symbol}&days={days}",
                "time-series-analysis" => $"/api/StatisticalAnalysis/time-series-analysis?symbol={symbol}&days={days}",
                "stationarity-test" => $"/api/StatisticalAnalysis/stationarity-test?symbol={symbol}&testType=adf&days={days}",
                "autocorrelation-analysis" => $"/api/StatisticalAnalysis/autocorrelation-analysis?symbol={symbol}&days={days}",
                _ => $"/api/StatisticalAnalysis/statistical-test?symbol={symbol}&testType={testType}&days={days}"
            };

            var response = await Http.GetFromJsonAsync<JsonElement>(url);
            result = response;
            resultJson = System.Text.Json.JsonSerializer.Serialize(response, new System.Text.Json.JsonSerializerOptions 
            { 
                WriteIndented = true 
            });
        }
        catch (Exception ex)
        {
            errorMessage = $"Error performing analysis: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleChatKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(chatInput) && !isAiThinking)
        {
            await SendChatMessage();
        }
    }

    private async Task SendChatMessage()
    {
        if (string.IsNullOrWhiteSpace(chatInput) || isAiThinking || result == null) return;

        var userMessage = chatInput.Trim();
        chatMessages.Add(new ChatMessage { Content = userMessage, IsUser = true });
        chatInput = "";
        isAiThinking = true;

        try
        {
            var requestBody = new
            {
                query = userMessage,
                context = resultJson,
                symbol = symbol,
                analysisType = GetAnalysisName(analysisType)
            };

            var response = await Http.PostAsJsonAsync("/api/ai/analyze-stats", requestBody);
            if (response.IsSuccessStatusCode)
            {
                var aiResponse = await response.Content.ReadFromJsonAsync<AiResponse>();
                chatMessages.Add(new ChatMessage { Content = aiResponse?.Response ?? "No response received", IsUser = false });
            }
            else
            {
                chatMessages.Add(new ChatMessage { Content = "Sorry, I couldn't process that request. Please try again.", IsUser = false });
            }
        }
        catch (Exception ex)
        {
            chatMessages.Add(new ChatMessage { Content = $"Error: {ex.Message}", IsUser = false });
        }
        finally
        {
            isAiThinking = false;
            await JS.InvokeVoidAsync("eval", "document.getElementById('chatMessages').scrollTop = document.getElementById('chatMessages').scrollHeight");
        }
    }

    private async Task GetAutoInsights()
    {
        if (result == null) return;

        isAiThinking = true;
        chatMessages.Clear();

        try
        {
            var requestBody = new
            {
                query = "Provide comprehensive insights about these statistical results. What do they mean? Are they significant? What should I know?",
                context = resultJson,
                symbol = symbol,
                analysisType = GetAnalysisName(analysisType)
            };

            var response = await Http.PostAsJsonAsync("/api/ai/analyze-stats", requestBody);
            if (response.IsSuccessStatusCode)
            {
                var aiResponse = await response.Content.ReadFromJsonAsync<AiResponse>();
                chatMessages.Add(new ChatMessage { Content = aiResponse?.Response ?? "No insights available", IsUser = false });
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                chatMessages.Add(new ChatMessage { Content = $"Unable to generate insights. Please check your API key configuration. Error: {error}", IsUser = false });
            }
        }
        catch (Exception ex)
        {
            chatMessages.Add(new ChatMessage { Content = $"Error generating insights: {ex.Message}. Please check your DeepSeek or OpenAI API key in appsettings.json", IsUser = false });
        }
        finally
        {
            isAiThinking = false;
            await JS.InvokeVoidAsync("eval", "document.getElementById('chatMessages').scrollTop = document.getElementById('chatMessages').scrollHeight");
        }
    }

    private string GetAnalysisName(string type)
    {
        return type switch
        {
            "statistical-test" => "Statistical Hypothesis Test",
            "hypothesis-test" => "Hypothesis Testing",
            "power-analysis" => "Statistical Power Analysis",
            "time-series-analysis" => "Time Series Analysis",
            "stationarity-test" => "Stationarity Testing",
            "autocorrelation-analysis" => "Autocorrelation Analysis",
            _ => type
        };
    }

    private string FormatPropertyName(string name)
    {
        return System.Text.RegularExpressions.Regex.Replace(name, "([a-z])([A-Z])", "$1 $2");
    }

    private string FormatValue(JsonElement value)
    {
        if (value.ValueKind == JsonValueKind.Number)
        {
            var num = value.GetDouble();
            return Math.Abs(num) >= 1000 ? num.ToString("N0") : num.ToString("F4");
        }
        return value.ToString();
    }

    private async Task ExportResults()
    {
        if (result == null) return;
        
        var json = System.Text.Json.JsonSerializer.Serialize(result, new System.Text.Json.JsonSerializerOptions 
        { 
            WriteIndented = true 
        });
        
        var fileName = $"{symbol}_{analysisType}_{DateTime.Now:yyyyMMdd_HHmmss}.json";
        await JS.InvokeVoidAsync("downloadFile", fileName, json);
    }

    private async Task CopyToClipboard()
    {
        if (!string.IsNullOrEmpty(resultJson))
        {
            await JS.InvokeVoidAsync("navigator.clipboard.writeText", resultJson);
        }
    }

    private async Task ExportChat()
    {
        if (chatMessages.Count == 0) return;

        var chatText = string.Join("\n\n", chatMessages.Select(m => 
            $"[{(m.IsUser ? "USER" : "AI")}] {m.Timestamp:HH:mm:ss}\n{m.Content}"));
        
        var fileName = $"{symbol}_chat_{DateTime.Now:yyyyMMdd_HHmmss}.txt";
        await JS.InvokeVoidAsync("downloadFile", fileName, chatText);
    }

    private void ResetAnalysis()
    {
        result = null;
        resultJson = "";
        chatMessages.Clear();
        errorMessage = "";

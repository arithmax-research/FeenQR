@page "/ml-models"
@using System.Net.Http.Json
@using Client.Models
@using Client.Extensions
@inject HttpClient Http
@inject IJSRuntime JS

<PageTitle>Machine Learning - FeenQR</PageTitle>

<style>
    .ml-container {
        position: fixed;
        left: 280px;
        top: 0;
        right: 0;
        bottom: 0;
        background: inherit;
        overflow-x: hidden;
        overflow-y: auto;
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
    }

    .ml-header {
        background: rgba(18, 18, 18, 0.95);
        border-bottom: 1px solid rgba(255, 255, 255, 0.08);
        padding: 1rem 1.5rem;
        position: sticky;
        top: 0;
        z-index: 100;
        flex-shrink: 0;
        width: 100%;
        box-sizing: border-box;
    }

    .tab-navigation {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .tab-btn {
        background: transparent;
        border: none;
        padding: 0.5rem 1rem;
        color: #9ca3af;
        font-size: 0.875rem;
        font-weight: 600;
        cursor: pointer;
        border-bottom: 2px solid transparent;
        transition: all 0.2s;
    }

    .tab-btn:hover {
        color: #f9fafb;
        background: rgba(255, 255, 255, 0.05);
    }

    .tab-btn.active {
        color: #f9fafb;
        border-bottom-color: #888888;
    }

    .ml-content {
        flex: 1;
        overflow-y: auto;
        padding: 1.5rem;
        width: 100%;
    }

    .input-panel {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .input-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }

    .input-group-custom {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .input-label {
        color: #d1d5db;
        font-size: 0.875rem;
        font-weight: 600;
    }

    .input-field {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        padding: 0.625rem;
        color: #f9fafb;
        font-size: 0.875rem;
    }

    .input-field:focus {
        outline: none;
        border-color: rgba(255, 255, 255, 0.3);
        background: rgba(255, 255, 255, 0.08);
    }

    .execute-btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 8px;
        padding: 0.625rem 1.5rem;
        color: white;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .execute-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }

    .execute-btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .result-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1rem;
    }

    .result-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 1rem;
        padding-bottom: 0.75rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .result-title {
        color: #f9fafb;
        font-size: 1.125rem;
        font-weight: 600;
        margin: 0;
    }

    .metric-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 1rem;
    }

    .metric-box {
        text-align: center;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.02);
        border-radius: 8px;
    }

    .metric-value {
        font-size: 1.75rem;
        font-weight: 700;
        color: #10b981;
        margin-bottom: 0.25rem;
    }

    .metric-label {
        color: #9ca3af;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .feature-badges {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .feature-badge {
        background: rgba(102, 126, 234, 0.15);
        border: 1px solid rgba(102, 126, 234, 0.3);
        color: #a5b4fc;
        padding: 0.375rem 0.75rem;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 500;
    }

    .importance-table {
        width: 100%;
        border-collapse: collapse;
    }

    .importance-table th {
        background: rgba(255, 255, 255, 0.05);
        color: #d1d5db;
        padding: 0.75rem;
        text-align: left;
        font-size: 0.875rem;
        font-weight: 600;
    }

    .importance-table td {
        padding: 0.75rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        color: #f9fafb;
        font-size: 0.875rem;
    }

    .importance-bar {
        height: 24px;
        background: linear-gradient(90deg, rgba(102, 126, 234, 0.3), rgba(102, 126, 234, 0.7));
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: flex-end;
        padding-right: 0.5rem;
        color: #f9fafb;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .alert-error {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        border-radius: 8px;
        padding: 1rem;
        color: #fca5a5;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .feature-badges {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .result-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .result-title {
        margin: 0;
        font-size: 1.25rem;
        font-weight: 600;
        color: #ffffff;
    }
</style>

<div class="ml-container">
    <div class="ml-header">
        <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem;">
            <i class="bi bi-robot" style="font-size: 1.5rem; color: #888888;"></i>
            <div>
                <h4 style="margin: 0; color: #f9fafb; font-weight: 600;">Machine Learning</h4>
                <p style="margin: 0; color: #9ca3af; font-size: 0.875rem;">Feature engineering, model validation, and AutoML pipeline</p>
            </div>
        </div>
        
        <div class="tab-navigation">
            <button class="tab-btn @(activeTab == "features" ? "active" : "")" @onclick="@(() => activeTab = "features")">
                <i class="bi bi-gear-fill"></i> Feature Engineering
            </button>
            <button class="tab-btn @(activeTab == "importance" ? "active" : "")" @onclick="@(() => activeTab = "importance")">
                <i class="bi bi-bar-chart-fill"></i> Feature Importance
            </button>
            <button class="tab-btn @(activeTab == "validation" ? "active" : "")" @onclick="@(() => activeTab = "validation")">
                <i class="bi bi-check-circle-fill"></i> Model Validation
            </button>
            <button class="tab-btn @(activeTab == "automl" ? "active" : "")" @onclick="@(() => activeTab = "automl")">
                <i class="bi bi-stars"></i> AutoML
            </button>
        </div>
    </div>

    <div class="ml-content">
        <!-- Input Panel -->
        <div class="input-panel">
            <div class="input-grid">
                <div class="input-group-custom">
                    <label class="input-label">Symbol</label>
                    <input type="text" class="input-field" @bind="symbol" placeholder="e.g., BTCUSDT" />
                </div>
                <div class="input-group-custom">
                    <label class="input-label">Training Days</label>
                    <input type="number" class="input-field" @bind="days" min="30" max="2000" placeholder="252" />
                </div>
                <div class="input-group-custom">
                    <label class="input-label">Top K Features</label>
                    <input type="number" class="input-field" @bind="topK" min="5" max="50" placeholder="10" />
                </div>
                <div class="input-group-custom" style="justify-content: flex-end;">
                    <button class="execute-btn" @onclick="ExecuteCurrentTab" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm"></span>
                        }
                        else
                        {
                            <i class="bi bi-play-fill"></i>
                        }
                        Execute
                    </button>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert-error">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <span>@errorMessage</span>
            </div>
        }

        <!-- Feature Engineering Tab -->
        @if (activeTab == "features" && featureResult != null)
        {
            <div class="result-card">
                <div class="result-header">
                    <i class="bi bi-gear-fill" style="color: #667eea; font-size: 1.25rem;"></i>
                    <h5 class="result-title">Feature Engineering Results</h5>
                </div>
                <div class="metric-grid">
                    <div class="metric-box">
                        <div class="metric-value">@featureResult.FeatureCount</div>
                        <div class="metric-label">Features Generated</div>
                    </div>
                    <div class="metric-box">
                        <div class="metric-value" style="color: #10b981;">@featureResult.SampleCount</div>
                        <div class="metric-label">Samples</div>
                    </div>
                </div>
                @if (featureResult.FeatureNames.Any())
                {
                    <div style="margin-top: 1.5rem;">
                        <div class="input-label" style="margin-bottom: 0.75rem;">Top Features</div>
                        <div class="feature-badges">
                            @foreach (var feature in featureResult.FeatureNames.Take(12))
                            {
                                <span class="feature-badge">@feature</span>
                            }
                        </div>
                    </div>
                }
            </div>
        }

        <!-- Feature Importance Tab -->
        @if (activeTab == "importance" && importanceResult != null)
        {
            <div class="result-card">
                <div class="result-header">
                    <i class="bi bi-bar-chart-fill" style="color: #667eea; font-size: 1.25rem;"></i>
                    <h5 class="result-title">Feature Importance Analysis</h5>
                </div>
                <table class="importance-table">
                    <thead>
                        <tr>
                            <th style="width: 80px;">Rank</th>
                            <th>Feature</th>
                            <th style="width: 120px;">Score</th>
                            <th style="width: 200px;">Importance</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int rank = 1;
                        }
                        @foreach (var item in importanceResult.FeatureImportances.Take(15))
                        {
                            <tr>
                                <td><span style="color: #888888; font-weight: 600;">#@rank</span></td>
                                <td>@item.Key</td>
                                <td>@item.Value.ToString("F4")</td>
                                <td>
                                    <div class="importance-bar" style="width: @((item.Value * 100).ToString("F0"))%">
                                        @((item.Value * 100).ToString("F1"))%
                                    </div>
                                </td>
                            </tr>
                            rank++;
                        }
                    </tbody>
                </table>
            </div>
        }

        <!-- Model Validation Tab -->
        @if (activeTab == "validation")
        {
            @if (validationResult != null)
            {
                <div class="result-card">
                    <div class="result-header">
                        <i class="bi bi-check-circle-fill" style="color: #10b981; font-size: 1.25rem;"></i>
                        <h5 class="result-title">Model Validation Results</h5>
                    </div>
                    <div class="metric-grid">
                        <div class="metric-box">
                            <div class="metric-value" style="color: #667eea;">@validationResult.PerformanceMetrics.GetValueOrDefault("R2", 0).ToString("F4")</div>
                            <div class="metric-label">R² Score</div>
                        </div>
                        <div class="metric-box">
                            <div class="metric-value" style="color: #06b6d4;">@validationResult.PerformanceMetrics.GetValueOrDefault("RMSE", 0).ToString("F6")</div>
                            <div class="metric-label">RMSE</div>
                        </div>
                        <div class="metric-box">
                            <div class="metric-value" style="color: #f59e0b;">@((int)validationResult.PerformanceMetrics.GetValueOrDefault("TrainSize", 0))</div>
                            <div class="metric-label">Train Size</div>
                        </div>
                        <div class="metric-box">
                            <div class="metric-value" style="color: #ec4899;">@((int)validationResult.PerformanceMetrics.GetValueOrDefault("TestSize", 0))</div>
                            <div class="metric-label">Test Size</div>
                        </div>
                        <div class="metric-box">
                            <div class="metric-value" style="color: #8b5cf6;">@validationResult.PerformanceMetrics.GetValueOrDefault("MAE", 0).ToString("F6")</div>
                            <div class="metric-label">MAE</div>
                        </div>
                    </div>
                </div>
            }
            
            @if (cvResult != null)
            {
                <div class="result-card">
                    <div class="result-header">
                        <i class="bi bi-arrow-repeat" style="color: #f59e0b; font-size: 1.25rem;"></i>
                        <h5 class="result-title">Cross-Validation Results</h5>
                    </div>
                    <div class="metric-grid">
                        <div class="metric-box">
                            <div class="metric-value" style="color: #10b981;">@cvResult.AverageScore.ToString("F4")</div>
                            <div class="metric-label">Average Score ± @cvResult.ScoreStdDev.ToString("F4")</div>
                        </div>
                        <div class="metric-box">
                            <div class="metric-value" style="color: #667eea;">@cvResult.FoldCount</div>
                            <div class="metric-label">Folds</div>
                        </div>
                        <div class="metric-box">
                            <div class="metric-value" style="color: #06b6d4;">@cvResult.FoldResults.Count</div>
                            <div class="metric-label">Completed Folds</div>
                        </div>
                        <div class="metric-box">
                            <div class="metric-value" style="color: #f59e0b;">@cvResult.ExecutionDate.ToShortDateString()</div>
                            <div class="metric-label">Execution Date</div>
                        </div>
                    </div>
                </div>
            }
        }

        <!-- AutoML Tab -->
        @if (activeTab == "automl" && autoMLResult != null)
        {
            <div class="result-card">
                <div class="result-header">
                    <i class="bi bi-stars" style="color: #f59e0b; font-size: 1.25rem;"></i>
                    <h5 class="result-title">AutoML Pipeline Results</h5>
                </div>
                <div class="metric-grid">
                    <div class="metric-box">
                        <div class="metric-value" style="color: #667eea;">@autoMLResult.BestModel.ModelType</div>
                        <div class="metric-label">Best Model</div>
                    </div>
                    <div class="metric-box">
                        <div class="metric-value" style="color: #10b981;">@autoMLResult.BestModel.Performance.Score.ToString("F4")</div>
                        <div class="metric-label">Best Score</div>
                    </div>
                    <div class="metric-box">
                        <div class="metric-value" style="color: #06b6d4;">@autoMLResult.ModelsTested</div>
                        <div class="metric-label">Models Tested</div>
                    </div>
                    <div class="metric-box">
                        <div class="metric-value" style="color: #f59e0b;">@autoMLResult.ExecutionTime.ToShortTimeString()</div>
                        <div class="metric-label">Execution Time</div>
                    </div>
                </div>
                
                <div style="margin-top: 1.5rem;">
                    <div class="input-label" style="margin-bottom: 0.75rem;">Model Rankings</div>
                    <table class="importance-table">
                        <thead>
                            <tr>
                                <th style="width: 80px;">Rank</th>
                                <th>Model Type</th>
                                <th style="width: 100px;">Score</th>
                                <th style="width: 100px;">R²</th>
                                <th style="width: 120px;">MSE</th>
                                <th style="width: 120px;">MAE</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int rank = 1;
                            }
                            @foreach (var model in autoMLResult.AllModelResults.OrderByDescending(m => m.Performance.Score).Take(10))
                            {
                                <tr style="@(model.ModelType == autoMLResult.BestModel.ModelType ? "background: rgba(16, 185, 129, 0.1);" : "")">
                                    <td><span style="color: #888888; font-weight: 600;">#@rank</span></td>
                                    <td style="@(model.ModelType == autoMLResult.BestModel.ModelType ? "color: #10b981; font-weight: 600;" : "")">
                                        @model.ModelType
                                        @if (model.ModelType == autoMLResult.BestModel.ModelType)
                                        {
                                            <span style="color: #f59e0b; margin-left: 0.5rem;">⭐</span>
                                        }
                                    </td>
                                    <td>@model.Performance.Score.ToString("F4")</td>
                                    <td>@model.Performance.R2.ToString("F4")</td>
                                    <td>@model.Performance.MSE.ToString("F6")</td>
                                    <td>@model.Performance.MAE.ToString("F6")</td>
                                </tr>
                                rank++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private string activeTab = "features";
    private string symbol = "BTCUSDT";
    private int days = 252;
    private int topK = 10;
    private bool isLoading = false;
    private string errorMessage = "";

    private FeatureEngineeringResult? featureResult;
    private FeatureImportanceResult? importanceResult;
    private ModelValidationResult? validationResult;
    private CrossValidationResult? cvResult;
    private AutoMLResult? autoMLResult;

    private async Task ExecuteCurrentTab()
    {
        switch (activeTab)
        {
            case "features":
                await FeatureEngineer();
                break;
            case "importance":
                await FeatureImportance();
                break;
            case "validation":
                await ValidateModel();
                await CrossValidate();
                break;
            case "automl":
                await AutoMLPipeline();
                break;
        }
    }

    private async Task FeatureEngineer()
    {
        await ExecuteWithLoading(async () =>
        {
            var request = new { Symbol = symbol, Days = days };
            featureResult = await Http.PostAsJsonAsync<FeatureEngineeringResult>($"/api/MachineLearning/feature-engineer", request);
        });
    }

    private async Task FeatureImportance()
    {
        await ExecuteWithLoading(async () =>
        {
            var request = new { Symbol = symbol, Days = days };
            importanceResult = await Http.PostAsJsonAsync<FeatureImportanceResult>($"/api/MachineLearning/feature-importance", request);
        });
    }

    private async Task ValidateModel()
    {
        await ExecuteWithLoading(async () =>
        {
            var request = new { Symbol = symbol, Days = days, TopK = topK };
            validationResult = await Http.PostAsJsonAsync<ModelValidationResult>($"/api/MachineLearning/validate-model", request);
        });
    }

    private async Task CrossValidate()
    {
        await ExecuteWithLoading(async () =>
        {
            var request = new { Symbol = symbol, Days = days, TopK = topK, Folds = 5 };
            cvResult = await Http.PostAsJsonAsync<CrossValidationResult>($"/api/MachineLearning/cross-validate", request);
        });
    }

    private async Task AutoMLPipeline()
    {
        await ExecuteWithLoading(async () =>
        {
            var request = new { Symbol = symbol, Days = days };
            autoMLResult = await Http.PostAsJsonAsync<AutoMLResult>($"/api/MachineLearning/automl-pipeline", request);
        });
    }

    private async Task ExecuteWithLoading(Func<Task> action)
    {
        isLoading = true;
        errorMessage = "";
        StateHasChanged();

        try
        {
            await action();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
}

@using System.Net.Http
@using System.Text.Json
@inject HttpClient Http
@inject ILogger<ForexDataWidget> Logger

<div class="forex-widget">
    <div class="widget-header">
        <h3><i class="fas fa-dollar-sign"></i> Forex Data</h3>
        <p>Foreign exchange rates and currency market data</p>
    </div>

    <div class="widget-controls">
        <div class="control-group">
            <label>Currency Pair:</label>
            <select class="form-control" @bind="selectedPair">
                <option value="EUR/USD">EUR/USD</option>
                <option value="GBP/USD">GBP/USD</option>
                <option value="USD/JPY">USD/JPY</option>
                <option value="USD/CHF">USD/CHF</option>
                <option value="AUD/USD">AUD/USD</option>
                <option value="USD/CAD">USD/CAD</option>
                <option value="NZD/USD">NZD/USD</option>
                <option value="EUR/GBP">EUR/GBP</option>
                <option value="EUR/JPY">EUR/JPY</option>
                <option value="GBP/JPY">GBP/JPY</option>
            </select>
            <button class="btn btn-primary" @onclick="LoadForexData">
                <i class="fas fa-download"></i> Load Data
            </button>
        </div>

        <div class="control-group">
            <label>Custom Pair:</label>
            <input type="text" class="form-control" @bind="customPair" placeholder="e.g., EUR/USD" />
            <button class="btn btn-info" @onclick="LoadCustomForex">
                <i class="fas fa-search"></i> Search
            </button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-spinner">
            <i class="fas fa-spinner fa-spin"></i> Loading forex data...
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle"></i> @errorMessage
        </div>
    }
    else if (forexData != null)
    {
        <div class="data-display">
            <h4>Forex Data: @(forexData.Value.GetProperty("pair").GetString())</h4>
            <pre>@JsonSerializer.Serialize(forexData.Value, new JsonSerializerOptions { WriteIndented = true })</pre>
        </div>
    }

    <div class="info-panel">
        <h5><i class="fas fa-info-circle"></i> Major Currency Pairs</h5>
        <ul>
            <li><strong>Majors:</strong> EUR/USD, GBP/USD, USD/JPY, USD/CHF</li>
            <li><strong>Commodity Currencies:</strong> AUD/USD, USD/CAD, NZD/USD</li>
            <li><strong>Cross Pairs:</strong> EUR/GBP, EUR/JPY, GBP/JPY</li>
            <li><strong>Emerging Markets:</strong> USD/MXN, USD/BRL, USD/ZAR</li>
        </ul>
    </div>
</div>

<style>
    .forex-widget {
        background: #000000;
        border-radius: 10px;
        padding: 25px;
        box-shadow: 0 2px 10px rgba(255,255,255,0.1);
    }

    .widget-header h3 {
        color: #ffffff;
        margin-bottom: 10px;
    }

    .widget-header p {
        color: #bdbdbd;
        margin-bottom: 20px;
    }

    .widget-controls {
        display: flex;
        flex-direction: column;
        gap: 15px;
        margin-bottom: 20px;
    }

    .control-group {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .control-group label {
        min-width: 120px;
        font-weight: 600;
        color: #ffffff;
    }

    .control-group input,
    .control-group select {
        flex: 1;
    }

    .data-display {
        background: #1e1e1e;
        border-radius: 8px;
        padding: 20px;
        margin-top: 20px;
    }

    .data-display pre {
        background: #2c3e50;
        color: #ecf0f1;
        padding: 15px;
        border-radius: 5px;
        overflow-x: auto;
        max-height: 500px;
    }

    .info-panel {
        background: #e8f8f5;
        border-left: 4px solid #27ae60;
        padding: 20px;
        margin-top: 20px;
        border-radius: 5px;
    }

    .info-panel h5 {
        color: #2c3e50;
        margin-bottom: 15px;
    }

    .info-panel ul {
        list-style: none;
        padding: 0;
    }

    .info-panel li {
        padding: 5px 0;
        color: #bdbdbd;
    }

    .loading-spinner {
        text-align: center;
        padding: 40px;
        color: #27ae60;
        font-size: 1.2rem;
    }
</style>

@code {
    private string selectedPair = "EUR/USD";
    private string customPair = "";
    private bool isLoading = false;
    private string? errorMessage = null;
    private JsonElement? forexData = null;

    private async Task LoadForexData()
    {
        isLoading = true;
        errorMessage = null;
        try
        {
            var response = await Http.GetStringAsync($"/api/EconomicData/forex/{Uri.EscapeDataString(selectedPair)}");
            forexData = JsonSerializer.Deserialize<JsonElement>(response);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading forex data: {ex.Message}";
            Logger.LogError(ex, "Error loading forex data");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadCustomForex()
    {
        if (string.IsNullOrWhiteSpace(customPair)) return;
        
        isLoading = true;
        errorMessage = null;
        try
        {
            var response = await Http.GetStringAsync($"/api/EconomicData/forex/{Uri.EscapeDataString(customPair)}");
            forexData = JsonSerializer.Deserialize<JsonElement>(response);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading forex data: {ex.Message}";
            Logger.LogError(ex, "Error loading custom forex data");
        }
        finally
        {
            isLoading = false;
        }
    }
}

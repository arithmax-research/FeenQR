<div class="card">
    <div class="card-header">
        <h5 class="card-title">Market Data</h5>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <label for="symbolInput" class="form-label">Symbol</label>
            <input type="text" class="form-control" id="symbolInput" @bind="symbol" @bind:event="oninput" />
        </div>
        <button class="btn btn-primary" @onclick="LoadMarketData">Load Data</button>
        
        @if (marketData != null)
        {
            <div class="mt-3">
                <h6>@symbol Market Data</h6>
                <pre>@marketData</pre>
            </div>
        }
        else if (isLoading)
        {
            <div class="mt-3">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private string symbol = "AAPL";
    private string? marketData;
    private bool isLoading = false;

    private async Task LoadMarketData()
    {
        isLoading = true;
        marketData = null;
        
        try
        {
            var response = await Http.GetAsync($"api/market-data/{symbol}");
            if (response.IsSuccessStatusCode)
            {
                marketData = await response.Content.ReadAsStringAsync();
            }
        }
        catch (Exception ex)
        {
            marketData = $"Error: {ex.Message}";
        }
        
        isLoading = false;
    }

    [Inject]
    private HttpClient Http { get; set; } = default!;
}
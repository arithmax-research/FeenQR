# Quant Research Agent Environment Variables
# Copy this file to .env and fill in your actual API keys

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL_ID=gpt-4o

# Spotify API Configuration
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Binance API Configuration (for crypto trading)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TEST_MODE=true

# Agent Configuration
AGENT_MAX_CONCURRENT_JOBS=5
AGENT_DATA_REFRESH_INTERVAL_MINUTES=15
AGENT_PODCAST_ANALYSIS_INTERVAL_HOURS=6

# Risk Management Configuration
RISK_MAX_DRAWDOWN=0.15
RISK_VOLATILITY_TARGET=0.12
RISK_MAX_POSITIONS=10
RISK_POSITION_SIZE_PERCENT=0.1
RISK_STOP_LOSS_PERCENT=0.05
RISK_TAKE_PROFIT_PERCENT=0.10

# Portfolio Configuration
PORTFOLIO_INITIAL_CASH=100000
PORTFOLIO_CURRENCY=USD

# Logging Configuration
LOG_LEVEL=Information
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/agent.log
